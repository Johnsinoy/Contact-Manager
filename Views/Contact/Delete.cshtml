@model ContactManager.Models.Contact

@{
    ViewData["Title"] = "Delete Contact";
}

<h2>Delete Contact</h2>

<h4>Are you sure you want to delete this contact?</h4>
<hr />

<table class="table">
    <tr>
        <th>First Name:</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Last Name:</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>Phone:</th>
        <td>@Model.Phone</td>
    </tr>
    <tr>
        <th>Email:</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Category:</th>
        <td>@(Model.Category != null ? Model.Category.Name : "No Category")</td>
    </tr>
</table>

<form asp-controller="Contact" asp-action="DeleteConfirmed" asp-route-id="@Model.ContactId" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Contact" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

