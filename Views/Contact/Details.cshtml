@model ContactManager.Models.Contact

@{
    ViewData["Title"] = "Contact Details";
}

<h2>Contact Details</h2>

<table class="table">
    <tr>
        <th>First Name:</th>
        <td>@Model.FirstName</td>
    </tr>
    <tr>
        <th>Last Name:</th>
        <td>@Model.LastName</td>
    </tr>
    <tr>
        <th>Phone:</th>
        <td>@Model.Phone</td>
    </tr>
    <tr>
        <th>Email:</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Category:</th>
        <td>@(Model.Category != null ? Model.Category.Name : "No Category")</td>
    </tr>
    <tr>
        <th>Date Added:</th>
        <td>@Model.DateAdded</td>
    </tr>
</table>

<a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back</a>
<a asp-controller="Contact" asp-action="Edit" asp-route-id="@Model.ContactId" class="btn btn-primary">Edit</a>
<a asp-controller="Contact" asp-action="Delete" asp-route-id="@Model.ContactId" class="btn btn-primary">Delete</a>
